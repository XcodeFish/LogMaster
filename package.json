{
  "name": "logmaster",
  "version": "1.0.0",
  "description": "美观实用的日志管理工具，可解决开发中日志太多导致代码杂乱以及控制台输出不美观的问题",
  "main": "dist/logmaster.cjs.js",
  "module": "dist/logmaster.esm.js",
  "browser": "dist/logmaster.min.js",
  "types": "types/index.d.ts",
  "sideEffects": false,
  "files": [
    "dist",
    "types",
    "LICENSE",
    "README.md"
  ],
  "scripts": {
    "clean": "rimraf dist",
    "prebuild": "npm run clean",
    "build": "rollup -c",
    "build:dev": "rollup -c --environment BUILD:development",
    "build:types": "tsc --emitDeclarationOnly",
    "build:all": "npm run build && npm run build:types",
    "postbuild": "node ./scripts/check-size.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "playwright test",
    "test:perf": "node tests/performance/logging-benchmarks.js",
    "lint": "eslint src tests",
    "lint:fix": "eslint src tests --fix",
    "format": "prettier --write \"src/**/*.js\" \"tests/**/*.js\"",
    "docs": "documentation build src/LogMaster.js -f html -o docs/api",
    "release": "standard-version",
    "release:major": "standard-version --release-as major",
    "release:minor": "standard-version --release-as minor",
    "release:patch": "standard-version --release-as patch",
    "publish": "git push --follow-tags origin main && npm publish",
    "prepublishOnly": "npm run lint && npm run test && npm run build:all"
  },
  "keywords": [
    "logger",
    "logging",
    "console",
    "debug",
    "pretty-print",
    "formatting"
  ],
  "author": "codefish",
  "license": "MIT",
  "engines": {
    "node": ">=12"
  },
  "devDependencies": {
    "@babel/core": "^7.22.5",
    "@babel/preset-env": "^7.22.5",
    "@playwright/test": "^1.35.0",
    "@rollup/plugin-babel": "^6.0.3",
    "@rollup/plugin-commonjs": "^25.0.0",
    "@rollup/plugin-node-resolve": "^15.1.0",
    "@rollup/plugin-terser": "^0.4.3",
    "babel-jest": "^29.5.0",
    "benchmark": "^2.1.4",
    "chalk": "^4.1.2",
    "documentation": "^14.0.1",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-jest": "^27.2.1",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.5.0",
    "pixelmatch": "^5.3.0",
    "prettier": "^2.8.8",
    "rimraf": "^5.0.1",
    "rollup": "^3.25.0",
    "rollup-plugin-filesize": "^10.0.0",
    "standard-version": "^9.5.0",
    "typescript": "^5.1.3"
  },
  "jest": {
    "testMatch": [
      "**/tests/unit/**/*.spec.js",
      "**/tests/integration/**/*.spec.js"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/dist/"
    ],
    "testEnvironment": "jsdom",
    "clearMocks": true,
    "collectCoverage": true,
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/**/*.d.ts",
      "!**/node_modules/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 90,
        "lines": 90,
        "statements": 90
      }
    },
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ],
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/src/$1"
    },
    "transform": {
      "^.+\\.js$": "babel-jest"
    }
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "unpkg": "dist/logmaster.min.js",
  "jsdelivr": "dist/logmaster.min.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/username/logmaster.git"
  },
  "bugs": {
    "url": "https://github.com/username/logmaster/issues"
  },
  "homepage": "https://github.com/username/logmaster#readme"
}
